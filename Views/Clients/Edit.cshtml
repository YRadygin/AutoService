@model AutoService.Models.Clients

@{
    ViewData["Title"] = "Edit";
}

<div class="modal fade" id="editClient">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="editClientLabel">Карточка клиента</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
            </div>


            <div class="modal-body">
                <div class="col-sm-2">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Fio" class="control-label"></label>
                            <input asp-for="Fio" class="form-control" />
                            <span asp-validation-for="Fio" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Pol" class="control-label"></label>
                            <input asp-for="Pol" class="form-control" />
                            <span asp-validation-for="Pol" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone" class="control-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateBirdth" class="control-label"></label>
                            <input asp-for="DateBirdth" class="form-control" />
                            <span asp-validation-for="DateBirdth" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateReg" class="control-label"></label>
                            <input asp-for="DateReg" class="form-control" />
                            <span asp-validation-for="DateReg" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>

            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

 }

